@model List<PlayerListingViewModel>

@{
    ViewData["Title"] = "Home Page";
}

@{
    var firstPlayer = Model.Any() ? Model[0] : null;
    var secondPlayer = Model.Count > 1 ? Model[1] : null;
    var thirdPlayer = Model.Count > 2 ? Model[2] : null;
    var fourthPlayer = Model.Count > 3 ? Model[3] : null;
    var fifthPlayer = Model.Count > 4 ? Model[4] : null;
}

@{
    if (!Model.Any())
    {
        <div class="jumbotron">
            <h1 class="display-4">Welcome to Counter-Strike Things</h1>
            <p class="lead">Here you can find everything you need about Counter-Strike</p>
            <hr class="my-4">
            <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
        </div>
    }
}

